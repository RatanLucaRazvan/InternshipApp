<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@drawable/recycler_view_item_design"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/devices_image_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_Device_Management_text_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/raleway"
        app:layout_constraintEnd_toStartOf="@id/assign_button"
        app:layout_constraintStart_toEndOf="@id/item_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_Device_Management_text_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway"
        app:layout_constraintEnd_toStartOf="@+id/assign_button"
        app:layout_constraintStart_toEndOf="@id/item_image_view"
        app:layout_constraintTop_toBottomOf="@id/id_Device_Management_text_view" />

    <ImageButton
        android:id="@+id/assign_button"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/green"
        android:src="@drawable/check_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageButton
        android:id="@+id/deactivate_button"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/red_3SS"
        android:src="@drawable/close_icon"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>